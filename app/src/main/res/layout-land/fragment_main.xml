<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@color/darkBlueBackground"
  tools:context=".ui.main.MainFragment">
  <com.google.android.material.tabs.TabLayout
    android:id="@+id/v_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    app:tabIndicatorColor="@color/lightText"
    app:tabSelectedTextColor="@color/lightText"
    app:tabTextColor="@color/lightText2">
    <com.google.android.material.tabs.TabItem
      android:id="@+id/v_images_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/btn_images"
      style="@style/AppButton"/>
    <com.google.android.material.tabs.TabItem
      android:id="@+id/v_breeds_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/btn_breeds"
      style="@style/AppButton"/>
  </com.google.android.material.tabs.TabLayout>
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"
    android:foreground="@drawable/shadow_bot_drop"
    android:foregroundGravity="top|fill_horizontal">
    <androidx.viewpager.widget.ViewPager
      android:id="@+id/v_view_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
  </FrameLayout>
</LinearLayout>